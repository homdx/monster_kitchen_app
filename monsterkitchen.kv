#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<FoodWidget>:
    image_id: image_id
    button_id: button_id
    FloatLayout:
        LoggedButton:
            id: button_id
            on_press: root.food_pressed()
            background_color: (0,0,0,0)
            allow_stretch: True
            keep_ratio: True
            size_hint_y: None
            size_hint_x: None
        Image:
            id: image_id
            allow_stretch: True
            keep_ratio: True
            size_hint_y: None
            size_hint_x: None

<ZeroScreen>:
    start_button_pre: start_button_pre
    subject_id: subject_id
    name: 'zero_screen'
    Widget:
        LoggedButton:
            id: start_button_pre
            name: 'start_button_pre'
            background_color: 1,0,1,1
            background_normal: ''
            text: 'לחתה'
            font_name: "fonts/the_font_bold.ttf"
            font_size: 32
            size: root.width * 0.15, root.height * 0.15
            pos: root.width * 0.85 - self.width * 0.5, root.height * 0.75 - self.height * 0.5
            on_press: app.press_start('pre')

        Label:
            text: "רפסמ"
            font_size: 48
            font_name: "fonts/the_font_bold.ttf"
            size: root.width * 0.175, root.height * 0.2
            pos: root.width * 0.15 - self.width * 0.5, root.height * 0.75 - self.height * 0.5

        LoggedTextInput:
            id: subject_id
            name: 'subject_id'
            text: ''
            font_size: 48
            size: root.width * 0.4, root.height * 0.2
            pos: root.width * 0.55 - self.width * 0.5, root.height * 0.75 - self.height * 0.5

<IntroScreen>:
    Widget:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'items/all_kitchen.png'

<EndScreen>:
    Widget:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'items/all_kitchen.png'


<TestScreen>:
    name: 'test_screen'
    monster_id: monster_id

    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.9, 0.5
            Rectangle:
                # self here refers to the widget i.e BoxLayout
                pos: self.pos
                size: self.size
        orientation: 'horizontal'
        GridLayout:
            cols: 4
            rows: 4
            padding: 0.2
            spacing: 0.2

            BoxLayout:
                Image:
                    source: 'items/fruit_vegetable.png'
                LoggedCheckBox:
            BoxLayout:
                Image:
                    source: 'items/meat_fish.png'
                LoggedCheckBox:
            BoxLayout:
                Image:
                    source: 'items/bread_sweet.png'
                LoggedCheckBox:
            BoxLayout:
                Image:
                    source: 'items/liquid.png'
                LoggedCheckBox:
            BoxLayout:
                Image:
                    source: 'items/red.png'
                LoggedCheckBox:
            BoxLayout:
                Image:
                    source: 'items/yellow_orange.png'
                LoggedCheckBox:
            BoxLayout:
                Image:
                    source: 'items/blue_purple.png'
                LoggedCheckBox:
            BoxLayout:
                Image:
                    source: 'items/green.png'
                LoggedCheckBox:
            BoxLayout:
                Image:
                    source: 'items/small.png'
                LoggedCheckBox:
            BoxLayout:
                Image:
                    source: 'items/medium.png'
                LoggedCheckBox:
            BoxLayout:
                LoggedCheckBox:
                    background_normal: 'items/big.png'
                #Image:
                #    source: 'items/big.png'
                #LoggedCheckBox:
            BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            Image:
                id: monster_id
            LoggedButton:
                name: 'finished'
                text: 'יתמייס'
                font_name: "fonts/the_font.ttf"
                on_press: app.next_monster()

